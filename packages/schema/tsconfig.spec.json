{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": [
    "jest.config.ts",
    "./**/*.test.ts",
    "./**/*.test.tsx",
    "./**/*.spec.ts",
    "./**/*.spec.tsx",
    "./**/*.d.ts",
    "./tests/**/*.ts",
    "./tests/**/*.tsx"
  ]
}
