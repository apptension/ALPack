{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx",
    "src/tests/**/*"
  ],
//  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
