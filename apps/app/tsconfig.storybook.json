{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "types": ["jest", "node", "@testing-library/jest-dom"]
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "src/tests/**/*.ts(x)"],
  "include": [
    "src/**/*.stories.ts",
    "src/**/*.stories.js",
    "src/**/*.stories.jsx",
    "src/**/*.stories.tsx",
    "src/**/*.stories.mdx",
    ".storybook/*.js",
    ".storybook/*.ts"
  ]
}
